@page "/addcustom"
@inherits LayoutComponentBase

@using WebApp.Shared.Components

<MudContainer Class="mt-5 px-4">
    <MudGrid Class="mt-2">
        <MudItem xl="4" lg="4" md="4" sm="6" xs="12">
            <MudCard Elevation="2">
                <MudCardContent Class="d-flex justify-space-around pb-0">            
                    <MudColorPicker PickerVariant="PickerVariant.Static" Rounded="true" Value="pickerColor" 
                    ValueChanged="ChangeColor" DisableAlpha="true" DisablePreview="true"/>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xl="4" lg="4" md="4" sm="6" xs="12">
            <MudCard Elevation="2" Style="height: 100%" Class="d-flex align-center">
                <MudCardContent>
                    <MudForm>
                        <InputFile hidden accept=".jpg, .jpeg, .png"/>

                        <MudButton HtmlTag="label" Variant="Variant.Filled" Color="Color.Primary" 
                            FullWidth="true" StartIcon="@Icons.Filled.CloudUpload">
                            Upload your images
                        </MudButton>

                        <MudTextField T="string" Label="Icon name" @bind-Value="IconName"/>
                        <MudAutocomplete T="string" Label="Category" AdornmentIcon="@Icons.Material.Filled.Search" AdornmentColor="Color.Primary" />
                        
                        <MudSlider Class="mt-3" Min="-100" Max="100" Value="0" Color="Color.Info">Saturation</MudSlider>
                        <MudSlider Min="-100" Max="100" Value="0" Color="Color.Error">Brightness</MudSlider>
                    
                        <MudButton HtmlTag="label" Variant="Variant.Filled" Color="Color.Secondary" 
                            FullWidth="true" Class="mt-3" StartIcon="@Icons.Filled.AddAPhoto" OnClick="SaveImageAsync">
                            Save to library
                        </MudButton>
                    </MudForm>   
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xl="4" lg="4" md="4" sm="6" xs="12">
            <MudCard Elevation="2" Style="height: 100%">
                <MudCardContent Style="height: 100%" Class="d-flex align-center">
                    <div class="folder-preview"> 
                        <Image Src="icons/folder-empty-bw.png" Fluid="true" Class="folder-image" 
                        Style="@($"{Filter}")" id="folderEmpty"/>
                        <Image Src="icons/folder-doc.png" Fluid="true" Class="folder-image" id="folderDoc"/>
                    </div>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xl="12" lg="12" md="12" sm="12" xs="12">
            <MudCard Elevation="2">
                <MudCardContent>
                    <MudGrid>
                        <MudItem xl="6" lg="6" md="6" sm="6" xs="12">
                            <MudCard Elevation="2">
                                <MudCardContent>
                                </MudCardContent>
                            </MudCard>
                        </MudItem>

                        <MudItem xl="6" lg="6" md="6" sm="6" xs="12">
                            <MudCard Elevation="2">
                                <MudCardContent>
                                </MudCardContent>
                            </MudCard>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>
