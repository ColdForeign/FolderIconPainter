@page "/addcustom"
@inherits LayoutComponentBase

@using WebApp.Shared.Components

<MudContainer Class="mt-5 px-4">
    <MudGrid Class="mt-3">
        <MudItem xl="4" lg="4" md="4" sm="6" xs="12">
            <MudCard Elevation="2">
                <MudCardContent Class="d-flex justify-space-around">            
                    <MudColorPicker PickerVariant="PickerVariant.Static" Rounded="true" Value="pickerColor" ValueChanged="ChangeColor"/>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xl="4" lg="4" md="4" sm="6" xs="12">
            <MudCard Elevation="2">
                <MudCardContent>
                    <MudForm>
                        <InputFile hidden accept=".jpg, .jpeg, .png"/>

                        <MudButton HtmlTag="label" Variant="Variant.Filled" Color="Color.Primary" 
                            FullWidth="true" Class="mt-1" StartIcon="@Icons.Filled.CloudUpload">
                            Upload your images
                        </MudButton>

                        <MudTextField T="string" Label="Icon name"/>
                        <MudAutocomplete T="string" Label="Category" AdornmentIcon="@Icons.Material.Filled.Search" AdornmentColor="Color.Primary" />
                        
                        <MudSlider Class="mt-3" Min="-100" Max="100" Value="0" Color="Color.Info">Saturation</MudSlider>
                        <MudSlider Min="-100" Max="100" Value="0" Color="Color.Error">Brightness</MudSlider>
                    
                        <MudButton HtmlTag="label" Variant="Variant.Filled" Color="Color.Secondary" 
                            FullWidth="true" Class="mt-3" StartIcon="@Icons.Filled.AddAPhoto" OnClick="SaveImageAsync">
                            Save to library
                        </MudButton>
                    </MudForm>   
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xl="4" lg="4" md="4" sm="6" xs="12">
            <MudCard Elevation="2">
                <MudCardContent>
                    <div class="folder-preview"> 
                        <Image Src="icons/folder-empty-bw.png" Fluid="true" Class="folder-image" 
                        Style="@($"{Filter}")" id="folderEmpty"/>
                        <Image Src="icons/folder-doc.png" Fluid="true" Class="folder-image" id="folderDoc"/>
                    </div>
                </MudCardContent>
            </MudCard>
        </MudItem>

